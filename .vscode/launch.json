{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Calculator API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Calculator API",
            "program": "${workspaceFolder}/bin/Debug/net9.0/Calculator.RestAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch Calculator API (No Browser)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Calculator API",
            "program": "${workspaceFolder}/bin/Debug/net9.0/Calculator.RestAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}